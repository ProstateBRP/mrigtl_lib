#
# This file sets up include directories, link directories, and
# compiler settings for a project to use mrigtl_lib.  It should not be
# included directly, but rather through the mrigtl_lib_USE_FILE setting
# obtained from mrigtl_libConfig.cmake.
#

IF(mrigtl_lib_BUILD_SETTINGS_FILE AND NOT SKIP_mrigtl_lib_BUILD_SETTINGS_FILE)
  INCLUDE(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${mrigtl_lib_BUILD_SETTINGS_FILE})
ENDIF()

# Add compiler flags needed to use mrigtl_lib.
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${mrigtl_lib_REQUIRED_C_FLAGS}")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${mrigtl_lib_REQUIRED_CXX_FLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${mrigtl_lib_REQUIRED_LINK_FLAGS}")
SET(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${mrigtl_lib_REQUIRED_LINK_FLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${mrigtl_lib_REQUIRED_LINK_FLAGS}")

# Add include directories needed to use mrigtl_lib.
INCLUDE_DIRECTORIES(BEFORE ${mrigtl_lib_INCLUDE_DIRS})

# Load the mrigtl_lib targets
include(${mrigtl_lib_LIBRARY_TARGETS_FILE})

